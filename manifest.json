{
  "manifest_version": 3,
  "name": "Gentle Chat",
  "version": "1.0",
  "description": "Ask ChatGPT question gently",
  "icons": {
    "48": "icon.png"
  },
  "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html",
      "default_title": "Gentle Chat",
      "options_page": "options.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
